<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://media.gqmagazine.fr/photos/603e6a8da9360b0585bcbc6a/16:9/w_2560%2Cc_limit/108387402');">
  My Movie List
</div>

<div class = "container">
  <ul class="list-group">
    <% @lists.each do |list|%>
      <div class="card-category"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <li>
          <%= link_to list.name, list_path(list) %>
        </li>
      </div>
    <%end%>
  </ul>
</div>


<div class= "container">
<%= link_to "+ Add new list", new_list_path, class: "btn btn-dark"%>
</div>
