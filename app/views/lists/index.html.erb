
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://media.gqmagazine.fr/photos/603e6a8da9360b0585bcbc6a/16:9/w_2560%2Cc_limit/108387402');">
  <div class="banner-content">
    My Movie List
  </div>
</div>

<div class="cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <h4><%= list.name %></h4>
      </div>
    <% end %>
  <% end %>
  <%= link_to new_list_path do %>
  <div class="card-category" style="background-color:black;">
    <h4>+ Add new list</h4>
  </div>
  <% end %>
</div>
