<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>

<h2><%= @list.name %></h2><br>

<% @list.bookmarks.each do |bookmark| %>
  <% movie_id = bookmark[:movie_id] %>
  <% movie = Movie.find(movie_id)%>
  <%= bookmark.comment %>
  <div class="card-product">
    <%= image_tag movie.poster_url %>
    <div class="card-product-infos">
      <h2><%= movie.title %></h2>
      <p><%= movie.overview %></p><br>
      <p>Rating: <%= movie.rating %></p>
    </div>
  </div>
<% end %>

<%= link_to "Add another bookmark to this list",  new_list_bookmark_path(@list), class: "btn btn-primary"%><br>
<%= link_to "Take me back to lists", lists_path, class: "btn btn-light"%>
